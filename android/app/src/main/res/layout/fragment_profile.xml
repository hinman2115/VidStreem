        <!-- Redeem Free VIP Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_redeem_vip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_header_card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reedemlogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffff"
                android:padding="@dimen/card_padding"
                android:visibility="visible">

                <TextView
                    android:id="@+id/redeem_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Acsess For Vip"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/subtitle_text_size"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/btn_enter_redeem"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/redeem_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_small_margin"
                    android:text="Enter Only If Yo Don't Have Account"
                    android:textColor="#666666"
                    android:textSize="@dimen/body_text_size"
                    app:layout_constraintEnd_toStartOf="@id/btn_enter_redeem"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/redeem_title" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_enter_redeem"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:backgroundTint="#FF5722"
                    android:minWidth="@dimen/button_min_width"
                    android:text="Enter"
                    android:textColor="@android:color/white"
                    app:cornerRadius="@dimen/button_corner_radius"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- History Section Header -->
        <TextView
            android:id="@+id/history_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="History"
            android:textColor="@android:color/black"
            android:textSize="@dimen/section_title_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/btn_view_all_history"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_redeem_vip" />

        <ImageView
            android:id="@+id/btn_view_all_history"
            android:layout_width="@dimen/icon_small_size"
            android:layout_height="@dimen/icon_small_size"
            android:src="@drawable/ic_arrow_right"
            app:tint="#999999"
            app:layout_constraintTop_toTopOf="@id/history_title"
            app:layout_constraintBottom_toBottomOf="@id/history_title"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- History Horizontal RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/recycler_padding"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/history_title" />

        <!-- Menu Items Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/menu_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/history_recycler_view">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="@dimen/text_small_margin"
                android:paddingBottom="@dimen/text_small_margin">

                <!-- Logout -->
                <TextView
                    android:id="@+id/menu_download_text"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/menu_item_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="Logout"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/subtitle_text_size"
                    app:layout_constraintEnd_toStartOf="@id/menu_download_arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/menu_download_arrow"
                    android:layout_width="@dimen/icon_small_size"
                    android:layout_height="@dimen/icon_small_size"
                    android:layout_marginEnd="@dimen/card_padding"
                    android:src="@drawable/ic_arrow_right"
                    app:layout_constraintBottom_toBottomOf="@id/menu_download_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/menu_download_text"
                    app:tint="#CCCCCC" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
